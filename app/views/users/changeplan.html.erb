<%= form_for @user do |f| %>
  <div class="form-group">
    <div class="mb-3 row">
      <div class="col-sm-2">
        <%= f.label :user_name %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :user_name ,class:"form-control",placeholder:"Username",autofocus:true%>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="mb-3 row">
      <div class="col-sm-2">
        <%= f.label :userplan%><br/>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :userplan,class:"form-control",placeholder:"Plan of User" %>
      </div>
    </div>
  </div>
  </div>

  <div class="center">
    <%= f.submit class:'btn btn-primary btn-lg' %>
  </div>
<% end %>